{
  "expo": {
    "name": "Saber Esp√≠rita",
    "slug": "saber-espirita",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "assetBundlePatterns": ["**/*"],
    "experiments": {
      "tsconfigPaths": true
    },

    "ios": {
      "bundleIdentifier": "app.saberespirita",
      "googleServicesFile": "./configs/firebase/GoogleService-Info.plist",
      "supportsTablet": true
    },

    "android": {
      "package": "app.saberespirita",
      "googleServicesFile": "./configs/firebase/google-services.json",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0C1624"
      },
      "edgeToEdgeEnabled": true,
      "edgeToEdge": {
        "statusBarStyle": "dark",
        "navigationBarStyle": "dark"
      }
    },

    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0C1624"
    },

    "plugins": [
      "expo-mail-composer",
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ]
    ]
  }
}
