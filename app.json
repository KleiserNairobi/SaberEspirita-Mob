{
  "expo": {
    "name": "Saber Espírita",
    "slug": "saber-espirita",
    "version": "1.0.13",
    "newArchEnabled": true,
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "assetBundlePatterns": ["**/*"],
    "experiments": {
      "tsconfigPaths": true
    },
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0C1624"
    },
    "ios": {
      "buildNumber": "17",
      "supportsTablet": false,
      "bundleIdentifier": "app.saberespirita",
      "googleServicesFile": "./dev/configs/GoogleService-Info.plist",
      "infoPlist": {
        "UIBackgroundModes": ["remote-notification"],
        "NSLocationWhenInUseUsageDescription": "Permita sua localização em uso para receber notificações personalizadas sobre o Saber Espírita."
      },
      "entitlements": {
        "aps-environment": "production",
        "com.apple.security.application-groups": ["group.app.saberespirita.onesignal"]
      }
    },
    "android": {
      "versionCode": 16,
      "package": "app.saberespirita",
      "googleServicesFile": "./dev/configs/google-services.json",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0C1624"
      },
      "edgeToEdgeEnabled": true,
      "edgeToEdge": {
        "statusBarStyle": "dark",
        "navigationBarStyle": "dark"
      }
    },
    "plugins": [
      [
        "onesignal-expo-plugin",
        {
          "mode": "production"
        }
      ],
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          },
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0",
            "minSdkVersion": 24,
            "packagingOptions": {
              "jniLibs": {
                "useLegacyPackaging": true
              }
            }
          }
        }
      ],
      "expo-font",
      "expo-mail-composer",
      "expo-localization",
      "expo-audio",
      "expo-asset"
    ]
  }
}
